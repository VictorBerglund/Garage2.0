@model IEnumerable<Garage2._0.Models.Garage>

@{
    ViewBag.Title = "Garage";
}
<script>
    $(document).fadeOut();
</script>
<h2>Garage</h2>
<div id="alert" class="alert alert-success" role="alert"  >@TempData["park"]</div>
<div>
    @Html.ActionLink("Park", "Park")

   @using (Html.BeginForm("Index", "Garage", FormMethod.Get))
   {
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                <input name="searchString" type="text" class="form-control" placeholder="Registration Number..." />
                <span class="input-group-btn">
                    <input class="btn btn-default" type="submit" value="Search"/>
                </span>
            </div>
        </div>
    </div>
   }
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegNr)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegNr)
        </td>

        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Check Out", "CheckOut", new { id=item.Id })
        </td>
    </tr>
}

</table>
